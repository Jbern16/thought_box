<%= render partial: "new_link" %>
<section class="links">
  <% @links.each do |link| %>
    <ul class="<%= 'striked' if link.read %>" id="link-<%=link.id%>" data-id="<%= link.id %>">
      <li class="link-title" data-title="<%=link.title%>" contenteditable="true"><%= link.title %></li>
      <li class="link-url" data-url="<%=link.url%>" contenteditable="true"><%= link.url %></li>
      <label><input class="read-box" type="checkbox" value="<%= link.read %>">Mark As Read</label>  
    </ul>
  <% end %>
</section>