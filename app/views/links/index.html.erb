<%= render partial: "new_link" %>
<section class="links">
  <% @links.each do |link| %>
    <ul id="link-<%=link.title%>">
      <li><%= link.title %></li>
      <li><%= link.url %></li>
      <label><input type="checkbox" value="<%= link.read %>">Mark As Read</label>  
    </ul>
  <% end %>
</section>